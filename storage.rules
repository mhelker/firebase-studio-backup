rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to read images. This is needed for profile pictures to be public.
    match /{allPaths=**} {
      allow read: if true;
    }

    // --- THIS IS THE FIX ---
    // This rule is very specific. It says a logged-in user can write (upload, update, delete)
    // files ONLY inside a folder under "customer-images" that exactly matches their own User ID.
    // This perfectly matches the path your code is trying to use.
    match /customer-images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}