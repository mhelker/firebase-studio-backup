rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // This rule is for the specific folder where profile pictures are stored.
    // It allows a logged-in user to write (upload) to their own subfolder.
    match /customer-images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // This allows anyone to read any file. This is necessary for profile pictures to be public.
    match /{allPaths=**} {
      allow read: if true;
    }
  }
}