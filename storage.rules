rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is necessary for displaying images in the app to all users.
    match /{allPaths=**} {
      allow read: if true;
      
      // Allow writes only if the user is authenticated.
      // For more specific rules, you could match paths like /customer-images/{userId}/{fileName}
      // and check if request.auth.uid == userId.
      allow write: if request.auth != null;
    }
  }
}
