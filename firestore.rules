rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===============================
    // Helper functions
    // ===============================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      let adminUIDs = ['csW7YstynkakD51lTaqJjlRuSCp2'];
      return request.auth.uid in adminUIDs;
    }

    // ===============================
    // Performers
    // ===============================
    match /performers/{performerId} {
      allow read: if true; // Anyone can view

      allow create: if isSignedIn() && isOwner(performerId);
      allow update: if isSignedIn() && isOwner(performerId);
      allow delete: if false; // No client delete

      // Reviews must go through secure backend
      match /reviews/{reviewId} {
        allow read: if !resource.data.pending;  // Only public reviews
        allow write: if false;                  // Only backend/server
      }
    }

    // ===============================
    // Customers
    // ===============================
    match /customers/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && isOwner(userId); // client can update self

      // Reviews must go through secure backend
      match /reviews/{reviewId} {
        allow read: if !resource.data.pending;
        allow write: if false; 
      }
    }

    // ===============================
    // Bookings
    // ===============================
    match /bookings/{bookingId} {
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.performerId));

      allow create: if isSignedIn() && isOwner(request.resource.data.userId);

      allow update: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.performerId));

      allow delete: if false; // cancel via status update
    }

    // ===============================
    // Feedback
    // ===============================
    match /feedback/{feedbackId} {
      allow read: if isSignedIn() && isAdmin();
      allow create: if isSignedIn();
      allow write: if false;
    }

    // ===============================
    // Suggestions
    // ===============================
    match /suggestions/{suggestionId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isAdmin();
      allow delete: if false;
    }
  }
}