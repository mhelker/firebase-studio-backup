rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- TEMPORARY TEST RULE ---
    // This allows any logged-in user to update any performer document.
    // This will tell us if the problem is in the rules or somewhere else.
    match /performers/{performerId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == performerId;
      allow update: if request.auth != null;
      allow delete: if false;
    }
    
    // The rest of your rules remain the same for now
    match /customers/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // ... (your other rules for bookings, etc.)
  }
}